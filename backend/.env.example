# =============================================================================
# NeuroDungeon - Environment Configuration
# Copy this to .env and fill in your actual API keys
# =============================================================================

# AI & LLM Services
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Audio Services  
MINIMAX_API_KEY=your_minimax_api_key_here
MINIMAX_GROUP_ID=your_minimax_group_id_here

# Authentication
AUTH0_DOMAIN=your_auth0_domain.auth0.com
AUTH0_CLIENT_ID=your_auth0_client_id
AUTH0_CLIENT_SECRET=your_auth0_client_secret
JWT_SECRET=your_super_secret_jwt_key_here

# Database (when you upgrade from in-memory)
DATABASE_URL=sqlite:///./chronicles_ai.db
# For PostgreSQL: postgresql://user:password@localhost/chronicles_ai

# Redis (for real-time features)
REDIS_URL=redis://localhost:6379

# Server Configuration
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your_super_secret_app_key_here
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/chronicles_ai.log

# Feature Flags
ENABLE_VOICE_CHAT=true
ENABLE_REAL_TIME_MULTIPLAYER=true
ENABLE_AI_GENERATED_IMAGES=false

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# File Upload (for character portraits, maps, etc.)
MAX_FILE_SIZE_MB=10
UPLOAD_DIRECTORY=uploads/ 